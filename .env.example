# Supabase Configuration
SUPABASE_URL=your_project_url # e.g., https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key # Project API key - anon/public
SUPABASE_SERVICE_KEY=your_service_key # Project API key - service_role
SUPABASE_PROJECT_ID=your_project_id # Project ID from URL
SUPABASE_JWT_SECRET=your_jwt_secret # JWT secret for auth

# Database Connection
DATABASE_URL=postgresql://postgres:your_db_password@your-project-id.supabase.co:5432/postgres

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your_secret_key

# GitHub Pages (if using)
GITHUB_PAGES_URL=https://your-username.github.io/beatflow

# Storage Settings
MAX_UPLOAD_SIZE=50MB
UPLOAD_FOLDER=uploads

# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret 